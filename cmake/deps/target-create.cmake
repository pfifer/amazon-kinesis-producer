function(create_third_party_library LIBRARY_NAME LIBRARY_FILE LIBRARY_DIR INCLUDE_DIR)
    add_library(${LIBRARY_NAME} UNKNOWN IMPORTED)
    set_property(TARGET ${LIBRARY_NAME} PROPERTY IMPORTED_LOCATION ${LIBRARY_DIR}/${LIBRARY_FILE}.a)
    set_property(TARGET ${LIBRARY_NAME} PROPERTY INTERFACE_INCLUDE_DIRECTORIES ${INCLUDE_DIR})
endfunction()